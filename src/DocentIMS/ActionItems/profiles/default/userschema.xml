<model xmlns:i18n="http://xml.zope.org/namespaces/i18n" xmlns:marshal="http://namespaces.plone.org/supermodel/marshal" xmlns:form="http://namespaces.plone.org/supermodel/form" xmlns:security="http://namespaces.plone.org/supermodel/security" xmlns:indexer="http://namespaces.plone.org/supermodel/indexer" xmlns:lingua="http://namespaces.plone.org/supermodel/lingua" xmlns:users="http://namespaces.plone.org/supermodel/users" xmlns="http://namespaces.plone.org/supermodel/schema" i18n:domain="plone">
  <schema name="member-fields">
    <field name="your_team_role" type="zope.schema.Choice" users:forms="On Registration|In User Profile">
      <description>What is your role on this team?</description>
      <required>False</required>
      <title>Your Team Role</title>
      <values>
        <element>PM</element>
        <element>Engineer</element>
        <element>Quality</element>
        <element>Public Relations</element>
      </values>
    </field>
    <field name="first_name" type="zope.schema.TextLine" users:forms="On Registration|In User Profile">
      <description/>
      <title>First Name</title>
    </field>
    <field name="office_phone_number" type="zope.schema.TextLine" users:forms="On Registration|In User Profile">
      <description/>
      <required>False</required>
      <title>Office Phone Number</title>
    </field>
    <field name="cellphone_number" type="zope.schema.TextLine" users:forms="On Registration|In User Profile">
      <description/>
      <title>Cellphone Number</title>
    </field>
    <field name="last_name" type="zope.schema.TextLine" users:forms="On Registration|In User Profile">
      <description/>
      <title>Last Name</title>
    </field>
    <field name="company" type="zope.schema.Choice" users:forms="On Registration|In User Profile">
      <description>Which company do you work for?</description>
      <required>False</required>
      <title>Company</title>
      <vocabulary>DocentIMS.ActionItems.CompanyVocabulary</vocabulary>
    </field>
    <field name="description" type="zope.schema.Text" users:forms="In User Profile">
      <description i18n:translate="help_biography">
          A short overview of who you are and what you do. Will be displayed on your author page, linked from the items you create.
      </description>
      <required>False</required>
      <title i18n:translate="label_biography">Biography</title>
    </field>
    <field name="portrait" type="plone.namedfile.field.NamedBlobImage" users:forms="In User Profile">
      <description i18n:translate="help_portrait">
          To add or change the portrait: click the "Browse" button; select a picture of yourself. Recommended image size is 75 pixels wide by 100 pixels tall.
      </description>
      <required>False</required>
      <title i18n:translate="label_portrait">Portrait</title>
    </field>
    <field name="location" type="zope.schema.TextLine">
      <description/>
      <title>Geographic Location</title>
    </field>
  </schema>
</model>
