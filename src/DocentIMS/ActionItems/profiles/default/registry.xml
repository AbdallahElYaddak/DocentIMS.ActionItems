<?xml version="1.0"?>
<registry
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="DocentIMS.ActionItems">

     <records interface="plone.app.querystring.interfaces.IQueryField"
              prefix="plone.app.querystring.field.owner">
       <value key="title">Owner</value>
       <value key="description">Owner index</value>
       <value key="enabled">True</value>
       <value key="operations">
           <element>plone.app.querystring.operation.string.is</element>
       </value>
       <value key="group">Metadata</value>
     </records>

     <records interface="plone.app.querystring.interfaces.IQueryField"
              prefix="plone.app.querystring.field.initial_due_date">
       <value key="title">Initial Due date</value>
       <value key="description">Initial Due date index</value>
       <value key="enabled">True</value>
       <value key="operations">
          <element>plone.app.querystring.operation.date.lessThan</element>
          <element>plone.app.querystring.operation.date.largerThan</element>
          <element>plone.app.querystring.operation.date.between</element>
          <element>plone.app.querystring.operation.date.lessThanRelativeDate</element>
          <element>plone.app.querystring.operation.date.largerThanRelativeDate</element>
          <element>plone.app.querystring.operation.date.today</element>
          <element>plone.app.querystring.operation.date.beforeToday</element>
          <element>plone.app.querystring.operation.date.afterToday</element>
          <element>plone.app.querystring.operation.date.beforeRelativeDate</element>
          <element>plone.app.querystring.operation.date.afterRelativeDate</element>
       </value>
       <value key="group">Metadata</value>
     </records>

     <records interface="plone.app.querystring.interfaces.IQueryField"
              prefix="plone.app.querystring.field.priority">
       <value key="title">Priority</value>
       <value key="description">Priority index</value>
       <value key="enabled">True</value>
       <value key="operations">
           <element>plone.app.querystring.queryparser._equal</element>
           <element>plone.app.querystring.queryparser._intLargerThan</element>
       </value>
       <value key="group">Metadata</value>
     </records>


       <!-- -*- extra stuff goes here -*- -->
      <!--javascript id="action_items.js" file="++plone++DocentIMS.ActionItems/js/action_items.js" enabled="True" /-->

    <records interface="plone.base.interfaces.resources.IBundleRegistry" prefix="plone.bundles/actionitems">
      <value key="enabled">True</value>
      <value key="jscompilation">++plone++DocentIMS.ActionItems/js/action_items.js</value>
      <value key="load_async">False</value>
      <value key="load_defer">False</value>
      <value key="depends">plone</value>
    </records>

</registry>
